<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LisaaArvostelu">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <EditText
            android:id="@+id/headerLisaaArvostelu"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Otsikko"
            app:layout_constraintBottom_toTopOf="@id/multilineLisaaArvostelu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />
        <EditText
            android:id="@+id/multilineLisaaArvostelu"
            android:layout_width="249dp"
            android:layout_height="349dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint = "Arvostelu"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toTopOf="@+id/arvosanaLisaaArvostelu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLisaaArvostelu" />

        <EditText
            android:id="@+id/arvosanaLisaaArvostelu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Arvosteluasteikko 0-5"
            android:digits="1,2,3,4,5"
            app:layout_constraintBottom_toBottomOf="@id/btnArvosteluToDataBase"
            app:layout_constraintTop_toBottomOf="@id/multilineLisaaArvostelu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnArvosteluToDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Lisää arvostelu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arvosanaLisaaArvostelu" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>